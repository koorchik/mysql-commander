#!/usr/bin/env perl

use strict;
use warnings;

use FindBin;
use lib "$FindBin::Bin/../lib";

use App::MysqlCommander;
use App::MysqlCommander::UI;

main();

sub main {
    my $ui = App::MysqlCommander::UI->new();
    
    $ui->on('sql_update', sub {
        my ( $self, $text ) = @_;
        say $text;
    });

    $ui->run();
}
